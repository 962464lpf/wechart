.index-container .index-swiper{
  height: 320rpx;
}
.index-container .index-swiper image{
  height: 100%;
  width: 100%;
}
.index-container .nav-container{
  display: flex;
  padding: 10rpx 0;
}
.nav-item{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.nav-item .iconfont{
  font-size: 50rpx;
  color: white;
  height: 100rpx;
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  background-color: #d43c33;
}
.nav-item text{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.tuijian-container{
  padding: 0 10rpx;
}
.tuijian-scroll{
  height: 300rpx;
  display: flex;
}
.tuijian-item{
  width: 200rpx;
  margin-right: 10rpx;
}
.tuijian-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.tuijian-item text{
  font-size: 22rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  /*display: block;*/
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/

  /* 多行文本溢出隐藏 省略号代替*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}

.paihang-container swiper{
  height: 580rpx;
}
.paihang-swiper-item .title{
font-size: 24rpx;
margin-bottom: 10rpx;
}
.paihang-swiper-item .list{
  height: 100rpx;
  display: flex;
align-items: center;
margin: 5rpx 0;
}
.paihang-swiper-item .list image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
}
.paihang-swiper-item .list .index{
  display: inline-block;
  width: 100rpx;
  text-align: center;
}
.paihang-swiper-item .list .name{
  flex: 1;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}