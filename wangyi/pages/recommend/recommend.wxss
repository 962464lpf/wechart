.recommned-container{
  position: relative;
}
.recommend-header{
  position: relative;
  height: 300rpx;
}
.recommend-header image{
  height: 100%;
  width: 100%;
}

.recommend-header .date{
  height: 100rpx;
  width: 200rpx;
  position: absolute;
  left: 50% ;
  top: 50%;
  color: white;
  margin-left: -30rpx;
}
.recommend-header .date text{
  margin-left: 10rpx;
}
.recommend-header .date text:first-child{
  font-size: 36rpx;
}
.recommend-content{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: white;
}
.content-header{
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  line-height: 40rpx;
}
.recommend-scroll{
  height: calc(100vh - 360rpx);
}
.scroll-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin: 15rpx 0;
}
.scroll-item image{
  height: 100rpx;
  width: 100rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
}
.scroll-item .musoc-info{
  flex: 1;
  font-size: 24rpx;
}
.scroll-item .musoc-info view{
  height: 50rpx;
  line-height: 50rpx;
}
.scroll-item .iconfont{
  display: inline-block;
  width: 50rpx;
}

