<view class="login-container">
  <view class="header">
    <view class="longin-text">LOGIN</view>
    <view class="welcome">欢迎回来！</view>
  </view>
  <view class="login">
    <view class="input-container">
      <view>手机号码</view>
      <view>
        <input type="number" placeholder="请输入手机号码" id="phone" data-type="phone" bindinput="handleInput"></input>
      </view>
    </view>
    <view class="input-container">
      <view>密码</view>
      <view>
        <input type="password" placeholder="请输入密码" id="password" data-type="password" bindinput="handleInput"></input>
      </view>
    </view>
    <view class="login-btn" bindtap="login">登录</view>
    <view class="forget-password">忘记密码?</view>
  </view>
  <view class="footer">
    <text>还没有账号？</text>
    <text>马上注册</text>
  </view>
</view>