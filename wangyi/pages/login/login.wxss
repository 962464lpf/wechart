.login-container{
  padding: 40rpx;
}
.login-container .header{
  position: relative;
}
.login-container .header .longin-text{
 font-size: 126rpx; 
 color: #e8e5e5;
}
.welcome{
  font-size: 56rpx;
  position: absolute;
  top: 75rpx;
  color: #3c3b3b;
}
.input-container{
  background: #f8f6fc;
  margin: 50rpx 0;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
}
.input-container view:first-child{
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.input-container input{
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.login-btn{
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  background: #d43c33;
  text-align: center;
  color: white;
  font-size: 32rpx;
}
.forget-password{
  margin-top: 40rpx;
  text-align: center;
  color: #4399fc;
  font-size: 26rpx;
}
.footer{
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  text-align: center;
}
.footer text{
  font-size: 26rpx;
}
.footer text:last-child{
  color: #4399fc;
}