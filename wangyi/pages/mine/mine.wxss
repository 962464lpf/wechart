.personal-container{
  height: 100%;
  width: 100%;
  /* background: #f5f5f5; */
}
.top{
  height: 520rpx;
  position: relative;
  padding-top: 100rpx;
  box-sizing: border-box;
  padding: 60rpx 30rpx 0 30rpx;
}
.top .top-bg {
  position: absolute;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  opacity: 0.7;
  z-index: -1;
}
.user-info{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.user-info image{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.vip-box{
  height: 240rpx;
  background: #36343c;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0 ;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
}
.vip-top{
  display: flex;
  justify-content: space-between;
}
.vip-top view:first-child{
  font-size: 20rpx;
}
.vip-top view:first-child text:first-child{
  font-size: 36rpx;
  margin-right: 20rpx;
}
.vip-top view:last-child{
  background: #f7d680;
  padding: 3rpx 20rpx;
  color: #333;
  font-size: 20rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 20rpx;
}
.vip-footer{
  height: 200rpx;
}
.vip-footer .left{
  float: left;
  width: 50%;
  height: 90rpx;
}
.vip-footer .left view {
  margin-top: 10rpx;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
 .vip-footer .right{
  height: 160rpx;
  width: 50%;
  float: right;
}
.vip-footer .right image{
  height: 100%;
  width: 100%;
}

.personal-content{
  position: relative;
  background: #f5f5f5;
  padding: 0 30rpx;
  bottom: 0;
  /* margin-top: -150rpx; */
  top: -150rpx;
  height: calc(100vh - 370rpx);
}
.personal-content .arc{
  height: 36rpx;
  width: 100%;
  position: absolute;
  top: -20rpx;
  left: 0;
  right: 0;
}
.nav-section{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-around;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.nav-item{
  width: 25%;
}
.nav-item .iconfont{
  font-size: 46rpx;
  color: #d43c33;
}
.nav-item text{
  display: block;
  text-align: center;
  font-size: 26rpx;
}
.persolal-history{
  background: white;
  padding: 20rpx 10rpx;
}
.persolal-history .title{
  font-size: 26rpx;
  height: 52rpx;
  line-height: 52rpx;
}
.history-scroll{
  height: 200rpx;
  display: flex;
}
.history-scroll .scroll-item {
  margin-right: 20rpx;
  height: 200rpx;
  width: 200rpx;
  text-align: center;

}
.personal-content .history-scroll .scroll-item image{
  height: 150rpx;
  width: 150rpx;
}
.personal-content .history-scroll .scroll-item text{
  font-size: 24rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.personal-content .history{
  line-height: 36rpx;
}
.cad-list{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 10rpx;
  border-top: 1rpx solid #eee;
  background: white;
  font-size: 28rpx;
}